@{
    ViewBag.Title = "Generador de Reportes";
    var reportUnitario = ViewBag.ReportUnitario as List<Lester.Models.Embarques>;
    var reportAgrop = ViewBag.reportAgroup as List<Lester.Models.Agrupamiento>;

    DateTime? fechaInicio = ViewBag.FechaInicio;
    DateTime? fechaDeFinalizacion = ViewBag.FechaDeFinalizacion;

}
@model System.Data.DataTable

<main>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center mb-4">Genera Reporte</h2>
                <div class="mt-2">
                    <div class="alert alert-primary d-flex alert-dismissible fade show" role="alert">
                        <strong>Selecciona una o un rango de fechas </strong> Para poder realizar un reporte.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label for="FechaInicio" class="col-form-label">Fecha Inicio:</label>
                            <input type="date" class="form-control" id="FechaInicio" name="FechaInicio" required />
                        </div>
                        <div class="col-md-4">
                            <label for="FechaDeFinalizacion" class="col-form-label">Fecha Fin:</label>
                            <input type="date" class="form-control" id="FechaDeFinalizacion" name="FechaDeFinalizacion"  />
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-primary" value="Generar" />
                        </div>
                    </div>
                }
            </div>
           
        </div>
    </div>
</main>


    @if (reportUnitario != null && reportUnitario.Any())
    {
        <h3>Reportes</h3>
        <div>
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("ExporToExcel", "Home", new { FechaInicio = ViewBag.FechaInicio, FechaDeFinalizacion = ViewBag.FechaDeFinalizacion })" class="btn" style="background-color: #217346; color: white; border-color: #1e6b41;">
                    <i class="fas fa-file-excel" style="margin-right: 5px;"></i> Exportar a Excel
                </a>
            </div>
        </div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="unitario-tab" data-bs-toggle="tab" data-bs-target="#unitario" type="button" role="tab" aria-controls="unitario" aria-selected="true">Reporte Unitario</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="agrop-tab" data-bs-toggle="tab" data-bs-target="#agrop" type="button" role="tab" aria-controls="agrop" aria-selected="false">Reporte por Agrupamiento de Viaje</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="unitario" role="tabpanel" aria-labelledby="unitario-tab">
                <table class="table table-striped">
                    <tr>
                        <th scope="col">Codebar</th>
                        <th scope="col">Acrónimo</th>
                        <th scope="col">Hora de Lectura</th>
                        <th scope="col">Viaje</th>
                    </tr>
                    @foreach (var item in reportUnitario)
                    {
                        <tr>
                            <td>@item.codebar</td>
                            <td>@item.acronimo</td>
                            <td>@item.fechaLectura.TimeOfDay</td>
                            <td>@item.Viaje</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="tab-pane fade" id="agrop" role="tabpanel" aria-labelledby="agrop-tab">
                <table class="table table-striped">
                    <tr>
                        <th scope="col">Acrónimo</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Viaje</th>
                    </tr>
                    @foreach (var item in reportAgrop)
                    {
                        <tr>
                            <td>@item.acronimo</td>
                            <td>@item.cantidad</td>
                            <td>@item.Viaje</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
}
else
            { 
                <h4 class="mt-3 text-center"> No realizada o no encotrada </h4>

            }





